@{
    ViewBag.Title = "Home";
}
<style>
   
    /* Hero Section */
    .hero {
        background: linear-gradient(135deg, #0072ff 0%, #00c6ff 100%);
        color: #ffffff;
        padding-top: 120px;
        padding-bottom: 120px;
        position: relative;
        overflow: hidden;
    }

    .hero::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.2); /* subtle overlay for contrast */
        z-index: 1;
    }

    .hero .container {
        position: relative;
        z-index: 2;
    }

    .hero h1 {
        font-size: 3rem;
        line-height: 1.3;
        font-weight: 700;
    }

        .hero h1 span {
            color: #ffd700; /* gold accent */
        }

    .hero h5 {
        font-size: 1.25rem;
        letter-spacing: 0.3px;
        color: #f0f0f0;
    }

    .hero p {
        max-width: 600px;
        color: #e0e0e0;
        font-size: 1.1rem;
    }

    /* Image Styling */
    .hero-img {
        width: 380px; /* expand width */
        max-width: 100%; /* ensures responsiveness */
        height: auto; /* keeps aspect ratio */
        object-fit: contain; /* ensures whole image is visible */
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
        border-radius: 10px; /* optional: rounded corners instead of circle */
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .hero-img:hover {
            transform: scale(1.05);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.35);
        }



    /* Particle Styles */
    .particles {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 0;
    }

    .particle {
        position: absolute;
        width: 6px;
        height: 6px;
        background: rgba(255, 255, 255, 0.6);
        border-radius: 50%;
        animation: float 15s linear infinite;
    }

    @@keyframes float {
        0%

    {
        transform: translateY(0) translateX(0);
        opacity: 0.7;
    }

    50% {
        transform: translateY(-50vh) translateX(20px);
        opacity: 0.3;
    }

    100% {
        transform: translateY(-100vh) translateX(-20px);
        opacity: 0;
    }

    }

    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .hero

    {
        text-align: center;
        padding-top: 80px;
        padding-bottom: 80px;
    }

    .hero-img {
        margin: 20px auto 0 auto;
    }

    }

    /* Buttons */
    .hero .btn {
        background: #ffd700;
        color: #004aad;
        font-weight: 600;
        border: none;
        transition: all 0.3s ease;
    }

        .hero .btn:hover {
            background: #ffc107;
            color: #002366;
            transform: translateY(-3px);
        }

    /* Social Icons */
    .social-icons a {
        color: #ffffff;
        transition: color 0.3s ease, transform 0.3s ease;
    }

        .social-icons a:hover {
            color: #ffd700;
            transform: scale(1.2);
        }
</style>
<section class="hero d-flex align-items-center min-vh-100">
    <!-- Particle Container -->
    <div class="particles"></div>

    <div class="container">
        <div class="row align-items-center">
            <!-- Left Content -->
            <div class="col-lg-7 col-md-12 text-start">
                <h1 class="fw-bold display-4 mb-2">Hi, I'm <span>Asenathi Yawa</span></h1>

                <h5 class="fw-semibold mb-3">
                    Software Developer
                </h5>

                <p class="lead mb-4">
                    Cyber Security & Software Development Student | Software Development Graduate<br />
                    Passionate About Information Technology & Life-long Learning.
                </p>

                <a href="@Url.Action("Contact", "Home")" class="btn btn-lg px-4 py-2 rounded-pill">
                    <i class="bi bi-envelope-fill me-2"></i>Hire Me
                </a>

                <!-- Social Icons -->
                <div class="social-icons mt-4">
                    <a href="#" class="me-3 fs-4"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="me-3 fs-4"><i class="bi bi-whatsapp"></i></a>
                    <a href="#" class="me-3 fs-4"><i class="bi bi-twitter-x"></i></a>
                    <a href="#" class="me-3 fs-4"><i class="bi bi-github"></i></a>
                    <a href="#" class="fs-4"><i class="bi bi-linkedin"></i></a>
                </div>
            </div>

            <!-- Right Image -->
            <div class="col-lg-5 col-md-12 text-center mt-5 mt-lg-0">
                <img src="~/images/graduate.jpg" alt="Profile Photo" class="hero-img" />
            </div>
        </div>
    </div>
</section>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        const particlesContainer = document.querySelector(".particles");
        const particleCount = 40;

        for (let i = 0; i < particleCount; i++) {
            const particle = document.createElement("div");
            particle.classList.add("particle");
            particle.style.left = Math.random() * 100 + "%";
            particle.style.top = Math.random() * 100 + "%";
            particle.style.width = 4 + Math.random() * 6 + "px";
            particle.style.height = particle.style.width;
            particle.style.animationDuration = 10 + Math.random() * 15 + "s";
            particle.style.animationDelay = Math.random() * 10 + "s";
            particlesContainer.appendChild(particle);
        }
    });
</script>


