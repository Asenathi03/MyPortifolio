<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Portfolio</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/Content/css/site.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #ffffff;
            color: #212529;
            margin: 0;
            padding: 0;
        }

        /* Navbar */
        .navbar {
            background: #ffffff !important;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

        .navbar-brand {
            font-weight: 700;
            color: #004aad !important;
            letter-spacing: 1px;
        }

        .nav-link {
            color: #212529 !important;
            font-weight: 500;
            margin-right: 15px;
            transition: color 0.3s;
        }

            .nav-link:hover {
                color: #004aad !important;
            }

        footer {
            background: #f8f9fa;
            color: #6c757d;
            text-align: center;
            padding: 20px 0;
            margin-top: 40px;
            font-size: 0.95rem;
        }

        main {
            padding-top: 90px; /* To account for fixed navbar */
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">ASENATHI</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("HOME", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("ABOUT", "About", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("SKILLS", "Skills", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("WORK", "Projects", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("CONTACT", "Contact", "Home", null, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <main class="container-fluid px-0">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        &copy; @DateTime.Now.Year — Asenathi Yawa, Software Development Student
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
